<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My MIS 4200</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: darkmagenta" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lovgren", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                        <a href="http://cob.ohio.edu/kl261315" class="btn btn-info btn-lg">
                            <span class="glyphicon glyphicon-home"></span>
                        </a>
                        <a href="http://cob.ohio.edu/kl261315/Home/Contact" class="btn btn-info btn-lg">
                            <span class="glyphicon glyphicon-earphone"> </span> </a>

                                <li>@Html.ActionLink("About", "About", "Home")</li>
                              
                                <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
</ul>
                @Html.Partial("_LoginPartial")
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Select an Option 
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#"></a>@Html.ActionLink("Cars", "Index", "Cars")</li>
                    <li><a href="#"></a>@Html.ActionLink("Owners", "Index", "Owner")</li>
                    <li><a href="#"></a>@Html.ActionLink("Current Owners", "Index", "currentOwner")</li>
                </ul>
            </div>
                </div>
            </div>

        </div>

    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Katie Lovgren for MIS 4200</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
